<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="./css/index.css" />
    <link rel="stylesheet" href="./css/headers.css" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
      integrity="sha512-9usAa10IRO0HhonpyAIVpjrylPvoDwiPUiKdWk5t3PyolY1cOd4DSE0Ga+ri4AuTroPR5aQvXU9xC6qOPnzFeg=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
     <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
      crossorigin="anonymous"
    />
    <title>Attendance System</title>
  </head>
  <body>
    <div class="container">
      {{>adminNavbar}}
      <div class="arrow-div">
        <i class="fas fa-chevron-left left-arrow"></i>
        <div class="middle-text">
          <h1 class="month year">2022</h1>
          <h2 class="month">jan</h2>
          <p class="month">22</p>
        </div>
        <i class="fas fa-chevron-right right-arrow"></i>
      </div>
      <div class="current">
        <p>27-january-2022</p>
      </div>
      <div class="color-box-container">
        <div class="color-text">
          <div class="color-box yellow"></div><p>Weekend</p>
        </div>
        <div class="color-text">
          <div class="color-box red"></div><p>Holiday</p>
        </div>
        <div class="color-text">
          <div class="color-box purple"></div><p>Sick Leave</p>
        </div>
        <div class="color-text">
          <div class="color-box darkBlue"></div><p>Planned Leave</p>
        </div>
      </div>
      <div class="main-container">
        <table>
          <head>
            <tr>
              <th>User Id</th>
              <th>FirstName</th>
              <th>LastName</th>
            </tr>
          </head>
          <tbody class="users"></tbody>
        </table>
        <table class="calender-table">
          <head>
            <tr></tr>
          </head>
          <tbody class="checkBox-div"></tbody>
        </table>
        <table>
          <head>
            <tr>
              <th>Present</th>
            </tr>
          </head>
          <tbody class="missed-div"></tbody>
        </table>
        <table>
          <head>
            <tr>
              <th>Absent</th>
              <th>sick_Leave</th>
              <th>planned_Leave</th>
            </tr>
          </head>
          <tbody class="absent-div">
          </tbody>
        </table>
      </div>
    </div>
    {{>footer}}
    <script src="./js/index.js"></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
      crossorigin="anonymous"
    ></script>
  </body>
</html>