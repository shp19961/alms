<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
      integrity="sha512-9usAa10IRO0HhonpyAIVpjrylPvoDwiPUiKdWk5t3PyolY1cOd4DSE0Ga+ri4AuTroPR5aQvXU9xC6qOPnzFeg=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
     <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="./css/addNewUser.css" />
    <link rel="stylesheet" href="./css/headers.css" />
    <title>Attendance New User</title>
  </head>
  <body>
    <div class="container">
      {{>adminNavbar}}
      <div class="form-container">
        <h1>New Employee Details</h1>
        <form>
          <div class="email-div">
          <input
            id="email"
            type="text"
            class="input-group"
            placeholder="Unique Email Id"
            required
          />
          </div>
          <input
            id="fName"
            type="text"
            class="input-group"
            placeholder="First Name"
            autocomplete="false"
            required
          />
          <input
            id="lName"
            type="text"
            class="input-group"
            placeholder="Last Name"
            required
          />
          <select  class="input-group" id="genderBox">
            <option  hidden  value="">Select Gender</option>
            <option  value="Male">Male</option>
            <option  value="Female">Female</option>
          </select>
          <select  class="input-group" id="dateBox">
            <option  hidden  value="">Select Joining Date</option>
          </select>
          <select  class="input-group" id="shiftBox">
            <option  hidden  value="">Select Shift</option>
            <option  value="FirstShift">FirstShift - 11:00 am to 07:00 pm</option>
            <option  value="SecondShift">SecondShift - 02:00 pm to 10:00 pm</option>
          </select>
          <select  class="input-group" id="designationBox">
            <option  hidden  value="">Designation</option>
            <option  value="Consultant">Consultant</option>
            <option  value="Delivery Manager">Delivery Manager</option>
            <option  value="Founder-Director">Founder-Director</option>
            <option  value="HR Recruiter">HR Recruiter</option>
            <option  value="Intern">Intern</option>
            <option  value="Junior Software Engineer">Junior Software Engineer</option>
            <option  value="Software Engineer">Software Engineer</option>
            <option  value="SQL Developer">SQL Developer</option>
            <option  value="UI/UX Developer">UI/UX Developer</option>
            <option  value="Others">Others</option>
          </select>
          
          <input
            id="otherDesignation"
            type="text"
            class="input-group hide"
            placeholder="Designation"
            required
          />
          <input
            id="tempPassword"
            type="password"
            class="input-group"
            placeholder="Temp Password"
            required
          />
          <input
            id="cTempPassword"
            type="password"
            class="input-group"
            placeholder="Confirm Temp Password"
            required
          />
          <button type="button" id="btn" class="btn" onclick="registerUser()">
            Add Employee
          </button>
        </form>
        <p id="error"></p>
      </div>
    </div>
    {{>footer}}
    <script src="./js/newUser.js"></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
      crossorigin="anonymous"
    ></script>
  </body>
</html>